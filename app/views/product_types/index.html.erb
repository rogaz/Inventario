<h1>Lista de Tipos de Productos</h1>

<table class="table">
  <tr>
    <th>Tipo De Producto</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @product_types.each do |product_type| %>
  <tr>
    <td><%= product_type.type_of_products %></td>
    <td><%= link_to 'Mostrar', product_type %></td>
    <td><%= link_to 'Editar', edit_product_type_path(product_type) %></td>
    <td><%= link_to 'Eliminar', product_type, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo De Tipo De Producto', new_product_type_path, :class => "btn btn-success" %>