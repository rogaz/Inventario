<!DOCTYPE html>
<html>
<head>
  <title>Inventario</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  
  <%= csrf_meta_tags %>
  <script language="javascript" type="text/javascript">
    $(document).ready(function(){
      string = "<%= @modelo_actual %>";
      if (string == "locations"){
        $("#li1").addClass("active");
      }else if (string == "activities"){
        $("#li2").addClass("active");
      } else if (string == "expenses"){
        $("#li3").addClass("active");
      } else if (string == "employees"){
        $("#li4").addClass("active");
      } else if (string == "customers"){
        $("#li5").addClass("active");
      } else if (string == "details"){
        $("#li6").addClass("active");
      } else if (string == "product_types"){
        $("#li7").addClass("active");
      } else if (string == "products"){
        $("#li8").addClass("active");
      } else if (string == "purchases"){
        $("#li9").addClass("active");
      } else if (string == "sales"){
        $("#li10").addClass("active");
      } else if (string == "stocks"){
        $("#li11").addClass("active");
      } else if (string == "users"){
        $("#li12").addClass("active");
      }
    });
  </script>
</head>
<body>
  <header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% if !current_user_session %>
        <div id="logo"><%= link_to image_tag("logo.png", alt: "Logo"), signin_path %></div>
        <ul id="barra-superior" class="nav pull-right"></ul>
      <% end %>
      <nav>
        <% if current_user_session %>
        <div id="logo"><%= link_to image_tag("logo.png", alt: "Logo"), employees_path %></div>
        <ul id="barra-superior" class="nav pull-right">
          <li id="li1"><%= link_to 'Localidades', locations_path %></li>
          <li id="li2"><%= link_to 'Actividades', activities_path %></li>
          <li id="li3"><%= link_to 'Gastos', expenses_path %></li>
          <li id="li4"><%= link_to 'Empleados', employees_path %></li>
          <li id="li5"><%= link_to 'Clientes', customers_path %></li>
          <li id="li6"><%= link_to 'Detalles', :controller => "details", :action => "new" %></li>
          <li id="li7"><%= link_to 'Tipos de Producto', product_types_path %></li>
          <li id="li8"><%= link_to 'Productos', products_path %></li>
          <li id="li9"><%= link_to 'Compras', purchases_path %></li>
          <li id="li13"><%= link_to 'C_Detalles', p_details_path %></li>
          <li id="li10"><%= link_to 'Ventas', sales_path %></li>
          <li id="li11"><%= link_to 'Almacen', stocks_path %></li>
          <li id="li12"><%= link_to 'Home', root_path %></li>
          <li><%= link_to "Cerrar SesiÃ³n", logout_path, :method => "delete" %></li>
        </ul>
        <% end %>
      </nav>
    </div>
  </div>
</header>
  <% flash.each do |key, value| %>
    <div id="flash" class="alert alert-<%= key %>"><%= value %></div>
  <% end %>
  <div id="content">
<%= yield %>
  </div>
</body>
</html>
