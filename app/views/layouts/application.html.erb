<!DOCTYPE html>
<html>
<head>
  <title>Inventario</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  
  <%= csrf_meta_tags %>
  <script language="javascript" type="text/javascript">
    $(document).ready(function(){
      string = "<%= @modelo_actual %>";
      if (string == "activities"){
        $("#li1").addClass("active");
      } else if (string == "customers"){
        $("#li2").addClass("active");
      } else if (string == "details"){
        $("#li3").addClass("active");
      } else if (string == "employees"){
        $("#li4").addClass("active");
      } else if (string == "expenses"){
        $("#li5").addClass("active");
      } else if (string == "product_types"){
        $("#li6").addClass("active");
      } else if (string == "products"){
        $("#li7").addClass("active");
      } else if (string == "purchases"){
        $("#li8").addClass("active");
      } else if (string == "sales"){
        $("#li9").addClass("active");
      } else if (string == "stocks"){
        $("#li10").addClass("active");
      } else if (string == "users"){
        $("#li11").addClass("active");
      }
    });
  </script>
</head>
<body>
  <header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <% if !current_user_session %>
        <div id="logo"><%= link_to image_tag("logo.png", alt: "Logo"), signin_path %></div>
        <ul id="barra-superior" class="nav pull-right"></ul>
      <% end %>
      <nav>
        <% if current_user_session %>
        <ul id="barra-superior" class="nav pull-right">
          <li id="li1"><%= link_to 'Activities', activities_path %></li>
          <li id="li2"><%= link_to 'Customers', customers_path %></li>
          <li id="li3"><%= link_to 'Details', details_path %></li>
          <li id="li4"><%= link_to 'Employees', employees_path %></li>
          <li id="li5"><%= link_to 'Expenses', expenses_path %></li>
          <li id="li6"><%= link_to 'Product_types', product_types_path %></li>
          <li id="li7"><%= link_to 'Products', products_path %></li>
          <li id="li8"><%= link_to 'Purchases', purchases_path %></li>
          <li id="li9"><%= link_to 'Sales', sales_path %></li>
          <li id="li10"><%= link_to 'Stocks', stocks_path %></li>
          <li id="li11"><%= link_to 'Users', users_path %></li>
          <li><%= link_to "Cerrar SesiÃ³n", logout_path, :method => "delete" %></li>
        </ul>
        <div id="logo"><%= link_to image_tag("logo.png", alt: "Logo"), employees_path %></div>
        <% end %>
      </nav>
    </div>
  </div>
</header>
  <div style="width: 800px; padding-bottom: 40px; margin: 0 auto; margin-top: 80px;">
<%= yield %>
  </div>
</body>
</html>
