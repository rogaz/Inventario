<% if @purchases.empty? %>
  <h2>No existen compras</h2>
<% else %>
<h1>Compras</h1>

<table class="table table-bordered table-condensed">
  <tr>
    <!--<th>ID</th>-->
    <th>Fecha</th>
    <th>Total</th>
    <th></th>
    <!--<th></th>-->
    <th></th>
  </tr>

<% @purchases.each do |purchase| %>
  <tr>
    <!--<td><%= purchase.id %></td>-->
    <td><%= fecha_con_formato(purchase.date) %></td>
    <td><%= purchase.total %></td>
    <td><%= link_to 'Mostrar Detalles', purchase, :class => "btn btn-info" %></td>
    <!--<td><%= link_to 'Edit', edit_purchase_path(purchase) %></td>-->
    <td><%= link_to 'Eliminar', purchase, confirm: '¿Desea eliminar esta compra?', method: :delete, :class => "btn btn-danger" %></td>
  </tr>
<% end %>
</table>

<% end %>

<% if session[:created_purchase] == "true" %>
  <%= link_to 'Agregar más Productos a Compra', new_p_detail_path, :class => "btn" %>
<% else %>
  <%= link_to 'Nueva Compra', new_p_detail_path, :class => "btn" %>
<% end %>