<h1>Listing sales</h1>

<table class="table">
  <tr>
    <th>Date</th>
    <th>Total</th>
    <th>Customer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @sales.each do |sale| %>
  <tr>
    <td><%= sale.date %></td>
    <td><%= sale.total %></td>
    <td><%= sale.customer_id %></td>
    <td><%= link_to 'Show', sale %></td>
    <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
    <td><%= link_to 'Destroy', sale, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Sale', new_sale_path, :class => "btn btn-success" %>
<%= render 'layouts/links' %>