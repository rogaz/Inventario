<p>
  <b>Fecha:</b>
  <%= @sale.date %>
</p>

<p>
  <b>Total:</b>
  <%= @sale.total %>
</p>

<p>
  <b>Cliente:</b>
  <%= @sale.customer_id %>
</p>


<h2>Productos de la Venta</h2>

<table class="table table-bordered table-condensed">
  <tr>
    <th>Cantidad</th>
    <th>Producto ID</th>
    <th>Producto</th>
    <th>Venta</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @details.each do |detail| %>
  <tr>
    <td><%= detail.quantity %></td>
    <td><%= detail.product_id %></td>
    <td><%= detail.product.size + " " + detail.product.product_type.type_of_products %></td>
    <td><%= detail.sale_id %></td>
    <td><%= link_to 'Show', detail %></td>
    <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
    <td><%= link_to 'Destroy', detail, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

