<h1>Listing details</h1>

<table class="table table-bordered table-condensed">
  <tr>
    <th>Quantity</th>
    <th>Product ID</th>
    <th>Product</th>
    <th>Sale</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @details.each do |detail| %>
  <tr>
    <td><%= detail.quantity %></td>
    <td><%= detail.product_id %></td>
    <td><%= detail.product.size + " " + detail.product.product_type.type_of_products %></td>
    <td><%= detail.sale_id %></td>
    <td><%= link_to 'Show', detail %></td>
    <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
    <td><%= link_to 'Destroy', detail, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>