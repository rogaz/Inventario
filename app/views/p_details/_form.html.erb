<%= form_for(@p_detail) do |f| %>
  <% if @p_detail.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@p_detail.errors.count, "error") %> prohibited this p_detail from being saved:</h2>

      <ul>
      <% @p_detail.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="form-horizontal">
  <div class="control-group">
    <%= f.label :quantity, :class => "control-label" %>
    <div class="controls"><%= f.number_field :quantity %></div>
  </div>
  <div class="control-group">
    <%= f.label :unit_price, :class => "control-label" %>
    <div class="controls"><%= f.text_field :unit_price %></div>
  </div>
  <div class="control-group">
    <%= f.label :product_id, :class => "control-label" %>
    <div class="controls"><%= f.grouped_collection_select(:product_id,  @product_types, :products, :type_of_products, :id, :size) %></div>
  </div>

  <div class="control-group">
    <%= f.submit "Agregar Producto", :class => "controls btn btn-success btn-small" %>
  </div>
</div>
<% end %>
